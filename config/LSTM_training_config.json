{
    "data_file": "data/data1.pkl",
    "time_step": 15,
    "inputs": {
	"categorical": ["minute", "weekday", "workday"],
	"continuous": [
	    "building_consumption", "building_generation", "building_temperature"
	]
    },
    "history_size": 24,
    "future_size": 1,
    "hours_ahead": 0,
    "average_continuous_inputs": true,
    "data_split": {"training": 0.8, "test": 0.1, "validation": 0.1},
    "N_epochs": 100,
    "batch_size": 256,
    "buffer_size": 10000,
    "validation_steps": 50,
    "model_arch": {
	"N_layers": 3,
	"N_units": 20
    },
    "loss_function": {
	"name": "MAE"
    },
    "optimizer": {
	"name": "Adam",
	"Adam": {
	    "learning_rate": 1e-4
	},
	"SGD" : {
	    "learning_rate": 1e-3,
	    "momentum": 0.5,
	    "nesterov": true
	}
    },
    "learning_rate_schedule": {
	"name": null,
	"exponential_decay": {
	    "initial_learning_rate": 2e-4,
	    "decay_steps": 40000,
	    "decay_rate": 0.8
	},
	"cyclical": {
	    "initial_learning_rate": 2e-5,
	    "max_learning_rate": 5e-3,
	    "factor": 10.0
	}
    },
    "callbacks": {
	"names": ["early_stopping"],
	"early_stopping": {
	    "monitor": "val_loss",
	    "patience": 500,
	    "mode": "min"
	},
	"reduce_on_plateau": {
	    "monitor": "val_loss",
	    "mode": "min",
	    "factor": 0.5,
	    "patience": 50,
	    "cooldown": 5,
	    "min_learning_rate": 1e-7
	}
    }
}
